{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default preset for use with Renovate's repos",
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":enablePreCommit",
    ":semanticCommits",
    ":semanticCommitTypeAll(ci)",
    ":semanticCommitScope(deps)",
    ":labels(bot, renovate, deps)",
    ":dependencyDashboard",
    ":dependencyDashboardApproval",
    ":prNotPending",
    ":disableRateLimiting",
    "docker:pinDigests"
  ],
  "assignees": ["refnode"],
  "enabledManagers": [
    "ansible",
    "docker-compose",
    "dockerfile",
    "gitlabci",
    "kubernetes",
    "gomod",
    "pip_requirements",
    "pip_setup",
    "pipenv",
    "pyenv",
    "setup-cfg",
    "bazel",
    "flux",
    "github-actions",
    "gitlabci-include",
    "helm-values",
    "helmv3",
    "homebrew",
    "html",
    "kustomize",
    "pre-commit",
    "regex",
    "terraform",
    "terraform-version",
    "terragrunt",
    "terragrunt-version"
  ]
}
